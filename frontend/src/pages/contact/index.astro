---
import BaseLayout from '@frontend/src/layouts/BaseLayout.astro'
---

<BaseLayout title="Лёгкая промышленность">
    <div>
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl text-center">Contact sales</h2>
        <p class="mt-2 text-lg leading-8 text-gray-600 text-center">Aute magna irure deserunt veniam aliqua magna enim voluptate.</p>
        <div class="form-control w-full max-w-xs flex">
            <div class="space-x-4">
                <label class="label">
                    <span class="label-text">First name</span>
                </label>
                <input type="text" class="input input-bordered w-full max-w-xs" />
            </div>
            <div>
                <label class="label">
                    <span class="label-text">Last name</span>
                </label>
                <input type="text" class="input input-bordered w-full max-w-xs" />
            </div>
        </div>

    </div>
</BaseLayout>