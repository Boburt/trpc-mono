---
import { FaRegUserCircle, FaUsers, FaWpforms } from "react-icons/fa";
import { BsBuildings } from "react-icons/bs";
import { MdOutlineSettingsApplications } from "react-icons/md";
---

<div class="flex">
  <nav class="mt-3">
    <ul
      class="menu w-80 p-8 rounded-box bg-slate-200 text-lg text-purple-500 dark:bg-slate-500 dark:text-purple-200"
    >
      <li>
        <a
          href="/profile"
          class="hover:bg-indigo-300 hover:text-purple-800 rounded-md"
        >
          <FaRegUserCircle />
          Profile
        </a>
      </li>
      <li>
        <a
          href="/profile/applications"
          class="hover:bg-indigo-300 hover:text-purple-800 rounded-md"
        >
          <MdOutlineSettingsApplications />
          My Applications
        </a>
      </li>
      <li>
        <a
          href="/profile/company"
          class="hover:bg-indigo-300 hover:text-purple-800 rounded-md"
        >
          <BsBuildings />
          My Company
        </a>
      </li>
      <li>
        <a
          href="/profile/collegs"
          class="hover:bg-indigo-300 hover:text-purple-800 rounded-md"
        >
          <FaUsers />
          My Collegs
        </a>
      </li>
      <li>
        <a
          href="/profile/forms"
          class="hover:bg-indigo-300 hover:text-purple-800 rounded-md"
        >
          <FaWpforms />
          Forms
        </a>
      </li>
    </ul>
  </nav>
</div>
