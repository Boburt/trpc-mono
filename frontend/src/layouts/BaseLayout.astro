---
import "../styles/global.css";

import Header from "../components/layout/Header";
import Footer from "../components/layout/Footer";
import CategoriesFilterServer from "../components/manufacturers/filter/CategoriesServer.astro";
import { ViewTransitions } from "astro:transitions";

const { title, showHeaderFilter = false } = Astro.props;
const pathname = new URL(Astro.request.url).pathname;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <ViewTransitions />
    <title>{title ?? "Лёгкая промышленность"}</title>
  </head>
  <body>
    <Header showHeaderFilter={showHeaderFilter} />
    <div class="container min-h-screen mx-auto py-4">
      {showHeaderFilter && <CategoriesFilterServer />}
      <slot />
    </div>
    <Footer />
  </body>
</html>
