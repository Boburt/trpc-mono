{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "esnext",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@backend/*": ["./backend/src/*"],
      "@frontend/*": ["./frontend/*"],
      "@admin/*": ["./admin/*"],
      "@lib/*": ["./lib/*"],
      "@components/*": ["./admin/components/*"],
      "@/*": ["./b2b/*"],
      "@uploads/*": ["./uploads/*"]
    }
  }
}
