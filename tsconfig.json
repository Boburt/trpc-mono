{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@backend/*": ["./backend/src/*"],
      "@frontend/*": ["./frontend/*"],
      "@lib/*": ["./lib/*"],
      "@components/*": ["./frontend/components/*"]
    }
  }
}
